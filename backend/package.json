{
    "name": "agediff-backend",
    "version": "1.1.0",
    "description": "Backend API for AgeDiff birthday calculator with summary file generation",
    "main": "server.js",
    "scripts": {
        "start": "node server.js",
        "dev": "node --watch server.js",
        "test": "jest --forceExit --detectOpenHandles",
        "test:coverage": "jest --coverage --forceExit --detectOpenHandles",
        "test:watch": "jest --watch"
    },
    "dependencies": {
        "express": "^4.21.0",
        "express-rate-limit": "^7.4.0",
        "helmet": "^8.0.0",
        "cors": "^2.8.5",
        "morgan": "^1.10.0"
    },
    "devDependencies": {
        "jest": "^29.7.0",
        "supertest": "^7.0.0"
    },
    "jest": {
        "testEnvironment": "node",
        "coverageDirectory": "coverage",
        "collectCoverageFrom": [
            "server.js"
        ]
    }
}